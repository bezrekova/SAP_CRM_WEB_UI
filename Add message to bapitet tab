  METHOD add_message.

    APPEND VALUE bapiret2( id = sy-msgid
                       type = sy-msgty
                       number = sy-msgno
                       message_v1 = sy-msgv1
                       message_v2 = sy-msgv2
                       message_v3 = sy-msgv3
                       message_v4 = sy-msgv4
                       message = iv_message ) TO gt_messages.

  ENDMETHOD.
